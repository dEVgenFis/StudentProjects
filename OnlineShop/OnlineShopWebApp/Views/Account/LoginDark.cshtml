@model Login

@{
    ViewData["Title"] = "Login";
}

<form method="post" class="glow-font-dark">
    <div style="text-align: center">
        <h4>Вход</h4>
    </div>
    <div class="row justify-content-center">
        <div class="glow-reference-dark" asp-validation-summary="All"></div>
    </div>
    <div class="row align-items-center">
        <div class="col-2 offset-5" style="text-align: center; padding-bottom: 10px">
            <input style="text-align: center; width: 188px; margin-left: -15px" placeholder="Логин" asp-for="UserName" />
        </div>
        <div style="padding-left: 30px; padding-bottom: 5px">
            <span asp-validation-for="UserName" />
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col-2 offset-5" style="text-align: center; padding-bottom: 10px">
            <input style="text-align: center; width: 188px; margin-left: -15px" placeholder="Пароль" asp-for="Password" />
        </div>
        <div style="padding-left: 30px; padding-bottom: 5px">
            <span asp-validation-for="Password" />
        </div>
    </div>
    <div class="row justify-content-center" style="padding-bottom: 10px">
        <div>
            <input value="true" asp-for="RememberMe" />
        </div>
        <div style="padding-left: 10px">
            Запомнить меня
        </div>
    </div>
    <div class="row justify-content-center" style="padding-bottom: 10px">
        <button class="btn btn-primary btn-primary-glow-dark" type="submit"
            asp-area=""
            asp-controller="Account"
            asp-action="Login">
        Войти</button>
    </div>
    <div class="row justify-content-center">
        <a class="glow-reference-dark"
           asp-area=""
           asp-controller="Account"
           asp-action="Register">
        Регистрация нового пользователя</a>
    </div>
</form>