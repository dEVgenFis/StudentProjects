@model List<Role>

@{
    ViewData["Title"] = "AdminRoles";
}

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-10">
        <div class="row" style="padding-bottom: 10px">
            <div class="col-4" style="text-align: start">
                <h3>Список ролей</h3>
            </div>
            <div class="col-8" style="text-align: right; padding-top: 12px">
                <a
                   asp-area=""
                   asp-controller="Admin"
                   asp-action="AddRole">
                Добавить новую роль</a>
            </div>
        </div>
        <table class="table" style="text-align: center">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название роли</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td>
                            <a
                               asp-area=""
                               asp-controller="Admin"
                               asp-action="RemoveRole"
                               asp-route-roleName="@Model[i].Name">
                            Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>