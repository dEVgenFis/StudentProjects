@model List<Product>

@{
    ViewData["Title"] = "AdminProducts";
}

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-10">
        <div class="row" style="padding-bottom: 10px">
            <div class="col-4" style="text-align: start">
                <h3>Список продуктов</h3>
            </div>
            <div class="col-8" style="text-align: right; padding-top: 12px">
                <a href="~/admin/addProduct">Добавить новый продукт</a>
            </div>
        </div>
        <table class="table" style="text-align: center">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Имя мастера</th>
                    <th>Наименование услуги</th>
                    <th>Стоимость услуги</th>
                    <th colspan="2">Действия</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            <a href="~/product/index?productId=@Model[i].Id">@Model[i].Name</a>
                        </td>
                        <td>Изготовление велосипедной рамы</td>
                        <td>@Model[i].Cost</td>
                        <td>
                            <a href="~/admin/editProduct?productId=@Model[i].Id">Редактировать</a>
                        </td>
                        <td>
                            <a href="#modal_form_@Model[i].Id" data-toggle="modal">Удалить</a>
                            <div class="modal" id="modal_form_@Model[i].Id" tabindex="-1">
                                <div class="modal-dialog" style="top: 25%">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Подтверждение действия</h5>
                                        </div>
                                        <div class="modal-body">
                                            <p>Вы действительно хотите удалить товар <b>"@Model[i].Name"</b> из вашей корзины?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Нет!</button>
                                            <a class="btn btn-danger" href="~/admin/removeProduct?productId=@Model[i].Id" role="button">
                                                Да.
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>