<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Main</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    </head>
    @if (Constants.Theme == 0)
    {
        <body style="background-image: url(/images/Theme_Light.jpg)">
            @await Html.PartialAsync("Header")
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            @await Html.PartialAsync("Footer")
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await Html.PartialAsync("_ValidationScriptsPartial")
            @RenderSection("Scripts", required: false)
        </body>
    }
    else
    {
        <body style="background-image: url(/images/Theme_Dark.jpg); background-size: 100% auto">
            @await Html.PartialAsync("HeaderDark")
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            @await Html.PartialAsync("FooterDark")
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await Html.PartialAsync("_ValidationScriptsPartial")
            @RenderSection("Scripts", required: false)
        </body>
    }
</html>