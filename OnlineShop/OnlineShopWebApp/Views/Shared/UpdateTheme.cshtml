@if (Constants.Theme == 0)
{
    <div class="d-inline-block" data-toggle="tooltip" title="Выбрать тёмную тему">
        <a class="btn btn-dark" role="button"
           asp-area=""
           asp-controller="Theme"
           asp-action="UpdateThemeOnDark">
        <i class="bi bi-brightness-low" style="color: #1b6ec2"></i></a>
    </div>
}
else
{
    <div class="d-inline-block" data-toggle="tooltip" title="Выбрать светлую тему">
        <a class="btn btn-light" role="button"
           asp-area=""
           asp-controller="Theme"
           asp-action="UpdateThemeOnLight">
        <i class="bi bi-brightness-low" style="color: #1b6ec2"></i></a>
    </div>
}