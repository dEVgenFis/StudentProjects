@model Product

@if (!ViewBag.Comparison.Contains(Model))
{
    if (ViewBag.Comparison.Count.Equals(4))
    {
        <span data-toggle="tooltip" title="Не более 4-х продуктов для сравнения">
            <button type="button" class="btn btn-light" disabled>
            <i class="bi bi-bar-chart">+</i></button>
        </span>
    }
    else
    {
        <span data-toggle="tooltip" title="К сравнению">
            <a class="btn btn-light" role="button"
               asp-area=""
               asp-controller="Comparison"
               asp-action="AddProduct"
               asp-route-productId="@Model.Id">
            <i class="bi bi-bar-chart">+</i></a>
        </span>
    }
}
else
{
    <span data-toggle="tooltip" title="Товар добавлен в Сравнение">
        <button type="button" class="btn btn-light" disabled>
            <i class="bi bi-bar-chart">
                <i class="bi bi-check2"></i>
            </i>
        </button>
    </span>
}