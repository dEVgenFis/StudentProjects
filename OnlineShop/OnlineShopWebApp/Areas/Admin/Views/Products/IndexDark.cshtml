@model List<Product>

@{
    ViewData["Title"] = "AdminProducts";
}

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-10">
        <div class="row" style="padding-bottom: 10px">
            <div class="col-4 glow-font-dark" style="text-align: start">
                <h3>Список продуктов</h3>
            </div>
            <div class="col-8" style="text-align: right; padding-top: 12px">
                <a class="glow-reference-dark"
                   asp-area="Admin"
                   asp-controller="Products"
                   asp-action="Add">
                Добавить новый продукт</a>
            </div>
        </div>
        <fieldset class="fieldset-table-dark">
            <table class="table" style="text-align: center">
                <thead class="glow-reference-dark">
                    <tr>
                        <th>№</th>
                        <th>Имя мастера</th>
                        <th>Наименование услуги</th>
                        <th>Стоимость услуги</th>
                        <th colspan="2">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td class="glow-font-dark">@(i + 1)</td>
                            <td>
                                <a class="glow-reference-dark"
                                   asp-area=""
                                   asp-controller="Product"
                                   asp-action="Index"
                                   asp-route-productId="@Model[i].Id">
                                @Model[i].Name</a>
                            </td>
                            <td class="glow-font-dark">Изготовление велосипедной рамы</td>
                            <td class="glow-font-dark">@Model[i].Cost</td>
                            <td>
                                <a class="glow-reference-dark"
                                   asp-area="Admin"
                                   asp-controller="Products"
                                   asp-action="Edit"
                                   asp-route-productId="@Model[i].Id">
                                Редактировать</a>
                            </td>
                            <td>
                                <a class="glow-reference-dark" href="#modal_form_@Model[i].Id" data-toggle="modal">Удалить</a>
                                <div class="modal" id="modal_form_@Model[i].Id" tabindex="-1">
                                    <div class="modal-dialog" style="top: 25%">
                                        <div class="modal-content modal-background-dark">
                                            <div class="modal-header glow-font-dark">
                                                <h5 class="modal-title">Подтверждение действия</h5>
                                            </div>
                                            <div class="modal-body glow-font-dark">
                                                <p>Вы действительно хотите удалить товар <b>"@Model[i].Name"</b> из вашей корзины?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary btn-primary-glow-dark-modal" data-dismiss="modal">Нет!</button>
                                                <a class="btn btn-warning btn-warning-glow-dark" role="button"
                                                   asp-area="Admin"
                                                   asp-controller="Products"
                                                   asp-action="Remove"
                                                   asp-route-productId="@Model[i].Id">
                                                Да.</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </fieldset>
    </div>
</div>